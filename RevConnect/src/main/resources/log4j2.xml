<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console">
            <PatternLayout
                    pattern="%d{HH:mm:ss} [%level] %c - %msg%n"/>
        </Console>

        <File name="FileLogger" fileName="logs/revconnect.log">
            <PatternLayout
                    pattern="%d [%level] %c - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>

</Configuration>
